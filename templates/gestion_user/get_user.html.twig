{% extends 'base.html.twig' %}

{% block title %}Informations Utilisateur{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="text-center mb-4">Informations Utilisateur</h1>
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <h5 class="card-title">Informations Utilisateur</h5>
                        <form>
                            <div class="mb-3">
                                <label for="inputFirstname" class="form-label">Pr√©nom</label>
                                <input type="text" class="form-control" id="inputFirstname" value="{{ user.firstname }}" readonly>
                            </div>
                            <div class="mb-3">
                                <label for="inputLastname" class="form-label">Nom</label>
                                <input type="text" class="form-control" id="inputLastname" value="{{ user.lastname }}" readonly>
                            </div>
                            <div class="mb-3">
                                <label for="inputEmail" class="form-label">Email</label>
                                <input type="email" class="form-control" id="inputEmail" value="{{ user.email }}" readonly>
                            </div>
                            <div class="mb-3">
                                <label for="inputGenre" class="form-label">Genre</label>
                                <input type="text" class="form-control" id="inputGenre" value="{{ user.genre }}" readonly>
                            </div>
                            <div class="mb-3">
                                <label for="inputRgpd" class="form-label">Rgpd</label>
                                <input type="text" class="form-control" id="inputRgpd" value="{% if user.rgpd %}Oui{% else %}Non{% endif %}" readonly>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
